<!--ヘッター-->
<%= render 'layouts/header' %>
  <div class="container mt-5">
    <div class="row mx-5 mt-5">
      <!--カテゴリ-->
      <%= render "layouts/side", post_categories: @post_categories, question_categories: @question_categories %>
        <!--一覧-->
        <div class="col-8 offset-1 card">
          <h3 class="mt-2 mb-1 card-body">検索結果</h3>
          <% if @method == "PostImage" %>
            <% if @post_images.present? %>
            　<h5>投稿</h5>
              <% @post_images.each do |image| %>
                <div class="mt-2 mb-1 card-body px-5">
                  <%= link_to user_path(image.id) do %>
                    <%= image_tag image.user.get_profile_image(30,30),class: "rounded-circle icon" %>
                    <%= image.user.name %>
                  <% end %>
                </div>
                <div class="d-flex">
                  <div class="side-image">
                    <%= image_tag image.get_image(350,200) %>
                  </div>
                  <div class="side-text">
                    <%= link_to post_image_path(image.id) do %>
                       <%= image.title %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% else %>
          <p>該当の投稿はありません</p>
          <% end %>

          <% elsif  @method == "User"%>
             <% if @users.present? %>
          　　　<h5>ユーザー</h5>
                 <% @users.each do |user| %>
                   <table class='table'>
                     <tbody>
                       <tr>
                          <td width=50>
                            <%= image_tag user.get_profile_image(100,100) %>
                          </td>
                          <td width=100 class="font-weight-bold text-left">
                            <%= user.name %>
                          </td>
                          <td width=20>
                            <%= link_to user_path(user.id) do %>
                              show
                            <% end %>
                          </td>
                       </tr>
                     </tbody>
                   </table>
                  <% end %>
              <% else %>
              <p>該当のユーザーはいません</p>
              <% end %>
          <% else %>
          　<% if @questions.present? %>
              <h5>質問</h5>
              <% @questions.each do |question| %>
                <div class="mt-2 mb-1">
                  <%= link_to user_path(question.id) do %>
                    <%= image_tag question.user.get_profile_image(30,30),class: "rounded-circle icon" %>
                    <%= question.user.name %>
                  <% end %>
                </div>
                <div class="d-flex">
                  <div class="side-image">
                    <%= image_tag question.get_image(350,200) %>
                  </div>
                  <div class="side-text">
                    <%= link_to post_image_path(question.id) do %>
                       <%= question.title %>
                    <% end %>
                  </div>
                </div>
             　　<% end %>
           <% else %>
           <p>該当の質問はありません</p>
      　　 　<% end %>
      <% end %>
       </div>
    </div>
  </div>
<!--フッター-->
<%= render 'layouts/footer' %>





