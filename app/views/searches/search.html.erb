<!--ヘッター-->
<%= render 'layouts/header' %>
  <div class="container mt-5">

    <div class="row mx-auto mt-5">
      <div class="col-md-12 mx-auto">
        <%= form_with url: search_path, local: true, method: :get do |s| %>

        <!--検索-->
        <div class="form-group row">
          <%= s.label'フリーワード' %>
          <%= s.text_field :word, class: 'form-control mb-2', placeholder:"気になる投稿やユーザーを検索しよう"%>
          <%= s.label'絞り込み' %>
          <br>
          <%= s.select :method, options_for_select([['User'], ['Question'],['PostImage']]),{ prompt: 'ジャンルを選択' },class: "form-control" %>
　　　　　<br>
          <%= s.select :search, options_for_select({"完全一致"=>"perfect_match", "前方一致"=>"forward_match",  "後方一致"=>"backward_match", "部分一致"=>"partial_match"}),{ prompt: '一致する部分を選択' },class: "form-control" %>
        </div>

        <div class="form-group row">
          <%= button_tag type: :submit,class: "btn btn-outline-success form-control" do %>
              <i class="fa-solid fa-magnifying-glass"></i>
          <% end %>
        </div>

       <% end %>
      </div>
    </div>

    <div class="row mx-auto">
    <!--カテゴリ-->
    <%= render "layouts/side", post_categories: @post_categories, question_categories: @question_categories, hashtags: @hashtags %>
    <!--結果-->
     <div class="col-9 offset-1">
      <h3 class="mt-2 mb-1 card-body">検索結果</h3>

        <% if @method == "PostImage" %>
        <!--投稿-->
          <% if @post_images.present? %>

              <% @post_images.each do |image| %>
                <div class="my-4">
                  <div class="card border-success shadow p-3 mx-3">
                   <div class= "mx-auto">

                    <div class="mt-1 pt-3 pl-3 pb-2">
                      <!--アイコン-->
                      <%= link_to user_path(image.id),class:"text-dark" do %>
                        <%= image_tag image.user.get_profile_image(30,30),class: "rounded-circle icon" %>
                        <%= image.user.name %>
                      <% end %>
                    </div>
                    <div class= "index-image col-md-11">
                       <!--写真-->
                      <%= image_tag image.get_image(700,520) %>
                    </div>
                    <p class="font-weight-bold card-title pl-3 pt-2 col-md-11">
                      <!--タイトル-->
                      <%= link_to post_image_path(image.id), class:"text-dark" do %>
                         <%= image.title %>
                      <% end %>
                    </p>
                    <p class="card-title pl-3 pt-2 col-md-11">
                    <!--内容,ハッシュタグリンク-->
                      <%= render_with_hashtags(image.body) %><br>
                      <%= image.created_at.strftime('%Y/%m/%d') %>
                    </p>

                   <h2 class="text-right">
                    <% unless current_user.name == "guestuser" %>
                      <% if image.favorited_by?(current_user) %>
                          <%= link_to post_image_favorites_path(image), method: :delete do %>
                            ♥<%= image.favorites.count %>
                          <% end %>
                      <% else %>
                          <%= link_to post_image_favorites_path(image), method: :post do %>
                           ♡<%= image.favorites.count %>
                          <% end %>
                        </p>
                      <% end %>
                    <% end %>
                   </h2>
                 </div>

                 </div>
                </div>
              <% end %>
              </div>
            </div>

          <% else %>
          <p>該当の投稿はありません</p>
        <% end %>
        <% elsif  @method == "User"%>
             <% if @users.present? %>
          　　　<h5>ユーザー</h5>
                 <% @users.each do |user| %>
                   <table class='table'>
                     <tbody>
                       <tr>
                          <td width=50>
                            <%= image_tag user.get_profile_image(100,100) %>
                          </td>
                          <td width=100 class="font-weight-bold text-left">
                            <%= user.name %>
                          </td>
                          <td width=20>
                            <%= link_to user_path(user.id) do %>
                              show
                            <% end %>
                          </td>
                       </tr>
                     </tbody>
                   </table>
                  <% end %>
              <% else %>
              <p>該当のユーザーはいません</p>
              <% end %>
          <% else %>
          　<% if @questions.present? %>
              <h5>質問</h5>
              <% @questions.each do |question| %>
                <div class="mt-2 mb-1">
                  <%= link_to user_path(question.id) do %>
                    <%= image_tag question.user.get_profile_image(30,30),class: "rounded-circle icon" %>
                    <%= question.user.name %>
                  <% end %>
                </div>
                <div class="d-flex">
                  <div class="side-image">
                    <%= image_tag question.get_image(350,200) %>
                  </div>
                  <div class="side-text">
                    <%= link_to post_image_path(question.id) do %>
                       <%= question.title %>
                    <% end %>
                  </div>
                </div>
             　　<% end %>
           <% else %>
           <p>該当の質問はありません</p>
      　　 　<% end %>
      <% end %>
       </div>


    </div>
 </div>