<% if user_signed_in? %>
  <!--ユーザー-->
  <div class="col-2 list-unstyled">
  <h5 class="pb-2 px-4">Category</h5>
  <% post_categories.each do |category| %>
  <li class="pb-2 px-4"><%= link_to category.post_category,post_images_path(post_category: category.id), class: 'text-dark' %></li>
  <% end %>
  <% question_categories.each do |category| %>
  <li class="pb-2 px-4"><%= link_to category.question_category,questions_path(question_category: category.id), class: 'text-dark' %></li>
  <% end %>
  </div>
<% else %>
　<!--管理者-->
  <div class="col-2 list-unstyled">
  <h5 class="pb-2 px-4">Category</h5>
  <% post_categories.each do |category| %>
  <li class="pb-2 px-4"><%= link_to category.post_category,admin_post_images_path(post_category: category.id), class: 'text-dark' %></li>
  <% end %>
  <% question_categories.each do |category| %>
  <li class="pb-2 px-4"><%= link_to category.question_category,admin_questions_path(question_category: category.id), class: 'text-dark' %></li>
  <% end %>
  </div>
<% end %>