  <div class="col">

    <ul class="row d-flex align-items-center list-unstyled">

    <% if user_signed_in? %>

      <li class="col">
      <%= link_to post_images_path, class: 'nav-link text-light text-right' do %>
      <strong>Home</strong>
      <% end %>
      </li>

      <li class="col">
      <%= link_to questions_path, class: 'nav-link text-light text-center' do %>
      <strong>みんなの質問</strong>
      <% end %>
      </li>

      <li class="col">
      <%= link_to new_post_image_path, class: 'nav-link text-light text-left' do %>
      <strong>投稿する</strong>
      <% end %>
      </li>
　<% else %>
      <li class="col">
      <%= link_to admin_post_images_path, class: 'nav-link text-light text-right' do %>
      <strong>Home</strong>
      <% end %>
      </li>
      <li class="col">
      <%= link_to admin_users_path, class: 'nav-link text-light text-center' do %>
       <strong>User</strong>
       <% end %>
       </li>
    　<li class="col">
      <%= link_to admin_post_categories_path, class: 'nav-link text-light text-left' do %>
      <strong>Category</strong>
      <% end %>
      </li>
     <% end %>
     </ul>
