  <div class="col">

    <ul class="row d-flex align-items-center list-unstyled">
    <% if user_signed_in? %>
      <li class="col">
      <%= link_to post_images_path, class: 'nav-link text-dark text-right' do %>
      <strong>Home</strong>
      <% end %>
      </li>
      <li class="col">
      <%= link_to questions_path, class: 'nav-link text-dark text-center' do %>
      <strong>みんなの質問</strong>
      <% end %>
      </li>
