　　<% else %>

　　  <li class="col">
　　　<%= link_to post_images_path, class: 'nav-link text-dark text-right' do %>
      <strong>Home</strong>
      <% end %>
　　　</li>

　　　<%= link_to users_path, class: 'nav-link text-dark text-center' do %>
　　　<strong>User</strong>
　　　<% end %>
　　　</li>

    　<li class="col">
　　　<%= link_to admin_post_categories_path, class: 'nav-link text-dark text-left' do %>
　　　<strong>Category</strong>
　　　<% end %>
　　　</li>
　　<% end %>
