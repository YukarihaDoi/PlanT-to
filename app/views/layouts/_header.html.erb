<header>
  <nav class="navbar navbar-expand-lg navbar-dark ">
    <!--上左-->
    <a class="navbar-brand p-1" href="/post_images"><%= image_tag(('logo-PlanT-to.png'),width: '35%',height: '35%') %></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
    </button>

  　<div class="collapse navbar-collapse" id="navbarSupportedContent">
    <!--上真ん中-->
      <%= form_with url: search_path, local: true, method: :get do |s| %>
      <ul class="navbar-nav mxl-auto">
        <li class="form-inline my-2 my-lg-0 ">
          <%= s.text_field :word , class: 'form-control word ', size:"50", placeholder:"気になる投稿やユーザーを検索しよう"%>
        </li>
        <li>
          <%= button_tag type: :submit,class: "btn btn-outline-success mx-2" do %>
            <i class="fa-solid fa-magnifying-glass"></i>
          <% end %>
        </li>
      </ul>
    <% end %>
    <!--アイコンから表示 -->
　　<div class="dropdown">
      <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton", data-toggle="dropdown">
        <% if user_signed_in? %>
        <%= image_tag current_user.get_profile_image(30,30),class: "rounded-circle icon" %>
         <% else %>
         <%= image_tag 'no_user.jpeg',width: '30px',height: '30px',class: "rounded-circle" %>
        <% end %>
      </button>
       <div class="dropdown-menu dropdown-menu-right">
       <!--ここにリンク-->
    <% if user_signed_in? %>
        <%= link_to user_path(current_user), class: 'nav-link text-dark' do %>
        マイページ
        <% end %>
          <% if current_user.name != "guestuser" %>
              <%= link_to new_post_image_path, class: 'nav-link text-dark ' do %>
              投稿
              <% end %>
              <%= link_to admin_news_images_path, class: 'nav-link text-dark' do %>
              お知らせ
              <% end %>
          <% else %>
              <%= link_to admin_news_images_path, class: 'nav-link text-dark' do %>
              お知らせ
              <% end %>
          <% end %>

        <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-dark' do %>
        ログアウト
        <% end %>

　　　<% else %>
　　　  <%= link_to admin_news_images_path, class: 'nav-link text-dark' do %>
        お知らせ
        <% end %>

        <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' do %>
        ログアウト
        <% end %>


    <% end %>

       </div>
       </div>



　　<!--ここまで-->
　　</div>
　</nav>

　<!--下部分-->
