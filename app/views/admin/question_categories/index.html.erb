<!--ヘッター-->
<%= render 'layouts/header' %>
<div class='container mt-5'>
  <!--1-->
  <div class='row'>
   <h2>質問カテゴリ一覧・追加</h2>
  </div>

  <%= form_with model: @q_category,local:true, url: admin_question_categories_path, method: :post do |f| %>
  <br>
  <!--2-->
  <div class="form-group row">
       <div class="col-2">
        <%= f.label "カテゴリー名" %>
       </div>
       <div class="col-3">
         <%= f.text_field :q_category ,class: 'form-control q_category'%>
       </div>
       <div class="col-2">
         <%= f.submit "新規登録",class: "btn btn-outline-success" %>
       </div>
         <% end %>
       <div class="col-5">
       </div>
       </div>
  <br>
  <br>
  <br>
 <!--3-->
 <div class='row'>
 <div class='col-6'>
   <table class='table'>
    <thead>
      <tr>
        <th width=500>カテゴリー</th>
        <th width=200></th>
      </tr>
    </thead>
   <% @q_categories.each do |category| %>
    <tbody>
      <tr>
        <td><%= category.question_category %></td>
        <td><%= link_to '編集',edit_admin_question_category_path(category.id), class: "btn btn-sm btn-outline-success"%></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>
</div>

</div>
<!--フッター-->
<%= render 'layouts/footer' %>