<!--ヘッダー-->
<%= render 'layouts/header' %>
<!--ユーザー編集-->
<div class="container mt-5">
  <div class="row mx-5 mt-5 justify-content-center ">

    <div class="col-md-8 card mx-5 my-5 px-3 pt-3 pb-4">
      <div  class="row mb-2 card-body">
       <%= link_to admin_users_path,class:"text-info" do %>
        <h2>
          <i class="fa-solid fa-circle-left"></i>
        </h2>
       <% end %>
      </div>
      <!--エラーメッセージ-->
      <%= render 'layouts/error',object: @user %>
      <!--フォーム-->
      <h5 class="ml-4">
        <%= image_tag @user.get_profile_image(200,200),class: "rounded-circle icon" %>
        <%= @user.name %>さんのステータス
      </h5>

      <%= form_with model: @user ,method: :patch, url:admin_user_path do |f| %>
        <div class="row px-5">
          <%= f.label "会員ステータス" %>
          <p class=" ml-3"><%= f.radio_button :is_deleted, false %>有効</p>
          <p class="text-danger ml-3"><%= f.radio_button :is_deleted, true %>利用停止</p>
        </div>
        <%= f.submit '編集', class:"btn btn-lg btn-block btn-outline-info mt-4 my-sm-0"%>
      <% end %>

    </div>
  </div>
</div>
<!--フッター-->
<%= render 'layouts/footer' %>