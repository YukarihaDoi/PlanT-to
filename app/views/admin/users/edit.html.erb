<div class="container mt-5">
  <div class="row mx-5 mt-5 justify-content-center">

    <div class="col-md-8 card">
      <div  class="row mb-2 card-body">
       <%= link_to user_path(@user),class:"text-success" do %>
        <p>マイページに戻る</p>
       <% end %>
      </div>
<% if @user.errors.any? %>
<ul>
<%= @user.errors.count %>件のエラーが発生しました
<% @user.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
</ul>
<% end %>

      <!--フォーム-->
      <h5 class="ml-4"><%= image_tag @user.get_profile_image(200,200),class: "rounded-circle icon" %>
      <%= @user.name %>さんのステータス</h5>

      <%= form_with model: @user ,method: :patch, url:admin_user_path do |f| %>
        <div class="row px-5">
          <%= f.label "会員ステータス" %>
          <p class=" ml-3"><%= f.radio_button :is_deleted, false %>有効</p>
          <p class="text-danger ml-3"><%= f.radio_button :is_deleted, true %>利用停止</p>
        </div> 
        <div class=" row px-5 pb-5">
          <%= f.label "公式バッジ" %>
          <p class=" ml-3"><%= f.radio_button :is_deleted, false %>なし</p><br>
          <p class="text-danger ml-3"><%= f.radio_button :is_deleted, true %>あり</p>
          <%= f.submit '編集', class:"btn btn-lg btn-block btn-outline-info mt-4 my-sm-0"%>
        </div>
      <% end %>
    </div>
  </div>
</div>