<!--ヘッダー-->
<%= render 'layouts/header' %>
<!--ユーザー一覧-->
<div class='container mt-5'>
  <div class='row mx-auto mt-5 '>
         <div class="col-md-12 card">
        <div class="mt-2 card-body">

          <table class='table'>
            <thead>
              <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Status</th>
                <th colspan="4"></th>
              </tr>
             </thead>
            <tbody>
              <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.get_profile_image(200,200),class: "rounded-circle user" %></td>

                <td class="font-weight-bold text-dark">
                  <%= link_to admin_user_path(user), class:"text-dark" do %>
                    <%= user.name %>
                  <% end %>
                </td>


                  <% if user.is_deleted == false %>
                    <td  class="font-weight-bold">
                      有効
                    </td>
                  <% else %>
                    <td  class="font-weight-bold text-danger">
                      利用停止
                    </td>
                  <% end %>

                <td><%= link_to 'Edit', edit_admin_user_path(user.id), class:"user_#{user.id} text-dark", data: { confirm: 'ユーザーのステータスを変更しますか？' } %></td>
              </tr>
              <% end %>
            </tbody>
          </table>


       </div>
     </div>
  </div>
</div>
<!--フッター-->
<%= render 'layouts/footer' %>