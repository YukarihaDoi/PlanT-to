<!--ヘッター-->
<%= render 'layouts/header' %>
<div class='container mt-5'>
  <div class='row mx-5 mt-5 '>
     <!--カテゴリ-->
     <%= render "layouts/side", post_categories: @post_categories, question_categories: @question_categories %>
      <div class="col-8 offset-1">
        <div class="mt-2">
          <% @users.each do |user| %>
          <table class='table'>
            <tbody>
              <tr>
                <td width=50>
                <%= image_tag user.get_profile_image(100,100),class: "rounded-circle user" %>
                </td>
                <td width=100 class="font-weight-bold text-left">
                <%= user.name %>
                </td>
                <td width=20>
                <%= link_to(admin_user_path(user.id), class:"text-dark") do %>
                  show
                <% end %>
                </td>
              </tr>
            </tbody>
          </table>
          <% end %>
       </div>
     </div>
  </div>
</div>
<!--フッター-->
<%= render 'layouts/footer' %>