<!--ヘッター-->
  <%= render 'layouts/header' %>
<h1>お知らせ編集</h1>
<%= form_with model: @news_image, url:admin_news_image_path ,method: :patch do |f| %>
    <div class="col-9 offset-1">
      <div class="form-group row">
      　<%= f.file_field :news_image %>
      </div>
      <div class="form-group row">
      　<%= f.text_field :news_title , class: 'form-control news_title'%>
      </div>
      <div class="form-group row">
      　<%= f.text_area :news_body , class: 'form-control news_body'%>
      </div>
      <div class="form-group row">
      　<%= f.submit '編集',class: "btn btn-outline-success" %>
      </div>
    </div>
  <% end %>
  <!--フッター-->
  <%= render 'layouts/footer' %>