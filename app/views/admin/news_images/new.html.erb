<!--お知らせ新規-->
<div class="container mt-5">
  <div class="row mt-5 mx-auto justify-content-center">
    <div class="col-md-8 card shadow p-3">

      <div  class="row mb-2 pl-5 card-body">
       <%= link_to admin_news_images_path,class:"text-info" do %>
          <h2>
           <i class="fa-solid fa-circle-left"></i>
          </h2>
       <% end %>
      </div>
     <!--エラーメッセージ-->
     <%= render 'layouts/error',object: @news_image %>
     <!--フォーム-->
     <%= form_with model: @news_image, url: admin_news_images_path  do |f| %>
      <div class="form-group col-md-11 px-5 pb-5 mx-auto">
        <%= f.file_field :news_image, accept: "image/*", class: "w-100 mb-2" %>
        <%= f.text_field :news_title , class: 'form-control mb-2'%>
        <%= f.text_area :news_body , class: 'form-control mb-2'%>
        <%= f.submit '投稿',class: "btn btn-lg btn-block btn-outline-info mt-4 my-sm-0" %>
      </div>
     <% end %>
  </div>
</div>