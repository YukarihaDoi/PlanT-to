<!--ヘッター-->
<%= render 'layouts/header' %>
  <div class="container-fluid">
    <div class="row mx-auto mt-5">
      <!--カテゴリ-->
      <%= render "layouts/side", post_categories: @post_categories, question_categories: @question_categories, hashtags: @hashtags %>
        <!--一覧-->
        <div class="col-md-9 offset-md--1">

         <div class="row mx-5 justify-content-start">
          <%= link_to admin_post_images_path, class: 'nav-link text-dark' do %>
             <p>みんなの投稿</p>
           <% end %>
           <%= link_to admin_questions_path, class: 'nav-link text-dark' do %>
             <p class="font-weight-bold">みんなの質問</p>
           <% end %>
          </div>

        <% @questions.each do |question| %>
         <div class="mx-3 my-4">
          <div class="card border-success shadow p-3 mx-3">
            <div class= "mx-auto">


          <div class="mt-1 pt-3 pl-3">
            <!--アイコン-->
          <%= link_to(admin_user_path(question.user), class:"text-dark") do %>
            <%= image_tag question.user.get_profile_image(130,130),class: "rounded-circle icon" %>
            <%= question.user.name %>
          <% end %>
          </div>

          <!--<div class="d-box">-->
          <div class="index-image col-md-11">
            <!--<div class="side-image">-->
          <%= image_tag question.get_question_image(700,520) %>
          </div>

            <!--文章-->
            <!--<div class="side-text">-->
                <p class="font-weight-bold card-title pl-3 pt-2 col-md-11">
                  <%= link_to(admin_question_path(question.id), class:"text-dark text-left") do %>
                   <%= question.question_title %>
                  <% end %>
                </p>

                <p class="card-title pl-3 pt-2 col-md-11">
                  <%= question.question_body %>
                  <!--%= render_with_question_hashtags(question.question_body) %><br>-->
                  回答数:<%= question.answers.count %>
                </p>
            </div>
            </div>
          </div>
        <% end %>
        </div>
    </div>

  </div>
  </div>
<!--フッター-->
<%= render 'layouts/footer' %>