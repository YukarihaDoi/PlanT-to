<!--ヘッター-->
<%= render 'layouts/header' %>
<div class="container mt-5">
<div class="row mx-5 mt-5">
<!--カテゴリ-->
<%= render "layouts/side", post_categories: @post_categories, question_categories: @question_categories %>
<!--一覧-->
<div class="col-9 offset-1">
<% @questions.each do |question| %>
<!--アイコン名前-->
<div class="mt-2 mb-1">
<%= link_to(user_path(question.user), class:"text-dark") do %>
<%= image_tag question.user.get_profile_image(30,30),class: "rounded-circle icon" %>
<%= question.user.name %>
<% end %>
</div>
<div class="d-flex">
<div class="side-image">
<%= image_tag question.get_question_image(350,200) %>
</div>
<!--文章-->
<div class="side-text">
<p class=" font-weight-bold">
<%= link_to(question_path(question.id), class:"text-dark text-left") do %>
<%= question.question_title %>
<% end %>
</p>
<p><%= question.question_body %></p>
<p><%= link_to "#{question.answers.count} 回答", question_path(question.id) %></p>
<br>
</div>
</div>
<% end %>
</div>
</div>
</div>
<!--フッター-->
<%= render 'layouts/footer' %>