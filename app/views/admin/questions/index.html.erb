<!--ヘッター-->
<%= render 'layouts/header' %>
  <div class="container mt-5">
    <div class="row mx-5 mt-5">
      <!--カテゴリ-->
      <%= render "layouts/side", post_categories: @post_categories, question_categories: @question_categories, hashtags: @hashtags %>
        <!--一覧-->
        <div class="col-md-8 offset-1">
          <div class="row">
          <%= link_to admin_post_images_path, class: 'nav-link text-dark' do %>
             <p>みんなの投稿</p>
           <% end %>
           <%= link_to admin_questions_path, class: 'nav-link text-dark' do %>
             <p class="font-weight-bold">みんなの質問</p>
           <% end %>
          </div>
        <% @questions.each do |question| %>
          <!--アイコン名前-->
          <div class="mt-2 mb-1">
          <%= link_to(admin_user_path(question.user), class:"text-dark") do %>
            <%= image_tag question.user.get_profile_image(30,30),class: "rounded-circle icon" %>
            <%= question.user.name %>
          <% end %>
          </div>
          <div class="d-box">
            <div class="side-image">
            <%= image_tag question.get_question_image(350,200) %>
            </div>
            <!--文章-->
            <div class="side-text">
                <p class=" font-weight-bold">
                  <%= link_to(admin_question_path(question.id), class:"text-dark text-left") do %>
                   <%= question.question_title %>
                  <% end %>
                </p>
                <p>
                  <%= question.question_body %>
                </p>
                <p>
                  回答数:<%= question.answers.count %>
                </p>
            </div>
          </div>
        <% end %>
        </div>
    </div>
  </div>
<!--フッター-->
<%= render 'layouts/footer' %>