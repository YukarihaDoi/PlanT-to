<!--ヘッター-->
<%= render 'layouts/header' %>
  <div class="container mt-5">
    <div class="row mx-5 mt-5">
    <!--カテゴリ-->
    <%= render "layouts/side", post_categories: @post_categories, question_categories: @question_categories %>
     <!--フォーム-->
     <%= form_with model: @question, url: admin_question_path, method: :patch do |f| %>
      <div class="col-9 offset-1">
       <div class="form-group row">
        <%= f.file_field :question_image%>
       </div>
       <div class="form-group row">
        <%= f.text_field :question_title , class: 'form-control question_title' %>
       </div>
       <div class="form-group row">
         <%= f.collection_select :question_category_id, QuestionCategory.all, :id, :question_category, { prompt: 'カテゴリー選択' }, class: 'form-control question_category_id' %>
       </div>
       <div class="form-group row">
        <%= f.text_area :question_body , class: 'form-control question_body' %>
       </div>
       <div class="form-group row">
        <%= f.submit '編集'%>
       </div>
      </div>
   <% end %>
  </div>
</div>
<!--フッター-->
<%= render 'layouts/footer' %>