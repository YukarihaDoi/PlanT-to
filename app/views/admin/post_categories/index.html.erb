<!--ヘッター-->
<%= render 'layouts/header' %>
<div class='container mt-5'>
  <!--1-->
  <div class='row'>
  <%= link_to admin_post_categories_path, class: 'nav-link text-dark' do %>
   <p>投稿カテゴリ</p>
   <% end %>
   <%= link_to admin_question_categories_path, class: 'nav-link text-dark' do %>
   <p>質問カテゴリ</p>
   <% end %>
  </div>

  <%= form_with model: @post_category,local:true, url: admin_post_categories_path, method: :post do |f| %>
  <br>
  <!--2-->
  <div class="form-group row">
       <div class="col-2">
        <%= f.label "カテゴリー名" %>
       </div>
       <div class="col-3">
         <%= f.text_field :post_category ,class: 'form-control p_category'%>
       </div>
       <div class="col-2">
         <%= f.submit "新規登録",class: "btn btn-outline-success" %>
       </div>
         <% end %>
       <div class="col-5">
       </div>
       </div>
  <br>
  <br>
  <br>
 <!--3-->
 <div class='row'>
 <div class='col-6'>
   <table class='table'>
    <thead>
      <tr>
        <th width=500>カテゴリー</th>
        <th width=200></th>
      </tr>
    </thead>
   <% @post_categories.each do |category| %>
    <tbody>
      <tr>
        <td><%= category.post_category %></td>
        <td><%= link_to '編集',edit_admin_post_category_path(category.id), class: "btn btn-sm btn-outline-success"%></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>
</div>

</div>
<!--フッター-->
<%= render 'layouts/footer' %>