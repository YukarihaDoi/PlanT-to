<div class='container mt-5'>
  <div class='row'>
    <h4>edit category</h4>
    <%= form_with model: @post_category,local:true, url: admin_post_categories_path, method: :patch do |f| %>
    <div class="form-group row">
      <div class="col-2">
      <%= f.label "カテゴリー名" %>
      </div>

      <div class="col-3">
      <%= f.text_field :p_category, class: 'form-control p_category' %>
      </div>

      <div class="col-2">
      <%= f.submit "変更を保存",class: "btn btn-outline-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>