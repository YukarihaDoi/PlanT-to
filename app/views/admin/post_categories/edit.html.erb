<!--ヘッター-->
<%= render 'layouts/header' %>
<div class='container mt-5'>
  <div class='row mx-5 mt-5'>
    <h4>edit category</h4>
  </div>
    <%= form_with model: @post_category,local:true, url: admin_post_category_path, method: :patch do |f| %>
    <div class="form-group row mx-5 mt-5">
      <div class="col-2">
      <%= f.label "カテゴリー名" %>
      </div>
      <div class="col-3">
      <%= f.text_field :post_category, class: 'form-control post_category' %>
      </div>
      <div class="col-2">
      <%= f.submit "変更を保存",class: "btn btn-outline-success" %>
      </div>
      <% end %>
    </div>
</div>
<!--フッター-->
<%= render 'layouts/footer' %>