<!--ヘッダー-->
<%= render 'layouts/header' %>
<!--投稿編集-->
<div class="container mt-5">
  <div class="row mt-5 mx-auto justify-content-center">
    <div class="col-md-8 card shadow p-3">

      <div  class="row mb-2 pl-5 card-body">
       <%= link_to post_image_path(@post_image),class:"text-info" do %>
          <h2>
           <i class="fa-solid fa-circle-left"></i>
          </h2>
       <% end %>
      </div>
      <!--エラーメッセージ-->
      <%= render 'layouts/error',object: @post_image %>
       <!--フォーム-->
     <%= form_with model: @post_image ,method: :patch do |f| %>
       <div class="form-group col-md-11 px-5 pb-5 mx-auto">
          <%= f.file_field :image, accept: "image/*", class: "w-100 mb-2" %>
          <%= f.text_field :title , class: 'form-control mb-2'%>
          <%= f.collection_select :post_category_id, PostCategory.all, :id, :post_category, { prompt: 'カテゴリー選択' }, class: 'form-control  mb-2' %>
          <%= f.text_area :body , class: 'form-control mb-2'%>
          <%= f.submit '編集',class: "btn btn-lg btn-block btn-outline-info mt-4 my-sm-0" %>
        </div>
    <% end %>
  </div>
</div>
<!--フッター-->
<%= render 'layouts/footer' %>