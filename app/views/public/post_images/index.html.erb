<!--ヘッダー-->
<%= render 'layouts/header' %>
  <div class="container-fluid">
    <div class="row mx-auto mt-5">
      <!--サイド(左)-->
      <%= render "layouts/side", post_categories: @post_categories, question_categories: @question_categories, hashtags: @hashtags %>
        <!--一覧(右)-->
        <div class="col-md-9 offset-md-1">

          <% @post_images.each do |post_image| %>
            <div class="mx-3 mb-4">
              <div class="card border-success shadow p-3 mx-3">
               <div class= "mx-auto">


                <div class="mt-1 pt-3 pl-3">
                  <!--アイコン-->
                  <%= link_to user_path(post_image.user),class:"text-dark" do %>
                    <%= image_tag post_image.user.get_profile_image(130,130),class: "icon rounded-circle" %>
                    <%= post_image.user.name %>
                  <% end %>
                </div>
                　<div class= "index-image col-md-11">
                    <!--写真-->
                    <%= image_tag post_image.get_image(700,520)%>
                  </div>
                    <p class="font-weight-bold card-title pl-3 pt-2 col-md-11">
                    <!--タイトル-->
                      <%= link_to(post_image_path(post_image.id), class:"text-dark") do %>
                        <%= post_image.title %>
                      <% end %>
                    </p>
                    <p class="card-title pl-3 pt-2 col-md-11">
                    <!--内容,ハッシュタグリンク-->
                      <%= render_with_hashtags(post_image.body) %><br>
                      <%= post_image.created_at.strftime('%Y/%m/%d') %>
                    </p>
                    <!--コメント-->
                    <!--<p class="card-title pl-3 pt-2">-->
                    <!--<= link_to "#{post_image.comments.count} コメント", post_image_path(post_image.id) %>-->
                    <!--</p>-->
                    <!--いいね(会員のみ)-->
                  <h2 class="text-right">
                    <% unless current_user.name == "guestuser" %>
                      <% if post_image.favorited_by?(current_user) %>
                          <%= link_to post_image_favorites_path(post_image), method: :delete do %>
                            ♥<%= post_image.favorites.count %>
                          <% end %>
                      <% else %>
                          <%= link_to post_image_favorites_path(post_image), method: :post do %>
                           ♡<%= post_image.favorites.count %>
                          <% end %>
                        </p>
                      <% end %>
                    <% end %>
                 </h2>
                </div>

                </div>
              </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>
<!--フッター-->
<%= render 'layouts/footer' %>