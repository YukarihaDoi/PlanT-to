<!--ヘッダー-->
<%= render 'layouts/header' %>
  <div class="container mt-5">
    <div class="row mx-5 mt-5">
      <!--カテゴリ-->
      <%= render "layouts/side", post_categories: @post_categories, question_categories: @question_categories %>
      <!--一覧-->
      <div class="col-9 offset-1">
        <% @post_images.each do |post_image| %>
        <!--アイコン名前-->
        <div class="mt-2 mb-1">
          <%= link_to user_path(post_image.user),class:"text-dark" do %>
            <%= image_tag post_image.user.get_profile_image(30,30),class: "icon rounded-circle" %>
            <%= post_image.user.name %>
          <% end %>
        </div>
        <div class="d-flex">
          <div class="side-image">
          　<%= image_tag post_image.get_image(350,200)%>
          </div>
          <!--文章-->
          <div class="side-text">
              <p class="font-weight-bold">
                <%= link_to(post_image_path(post_image.id), class:"text-dark") do %>
                 <%= post_image.title %>
                <% end %>
              </p>
              <p>♡<%= post_image.favorites.count %></p>
              <p><%= post_image.body %></p>
            <!--ハッシュタグ-->
            <p>
              <%= render_with_hashtags(post_image.hashbody) %>
            </p>
            <!--いいね-->
            <% unless admin_signed_in? && current_user.name == "guestuser" %>
              <% if post_image.favorited_by?(current_user) %>
                <p>
                  <%= link_to post_image_favorites_path(post_image), method: :delete do %>
                    ♥<%= post_image.favorites.count %>
                  </p>
                  <% end %>
            <% else %>
                <p>
                  <%= link_to post_image_favorites_path(post_image), method: :post do %>
                    ♡<%= post_image.favorites.count %>
                  <% end %>
                </p>
              <% end %>
            <% end %>
            <!--コメント-->
            <%= link_to "#{post_image.comments.count} コメント", post_image_path(post_image.id) %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
<!--フッター-->
<%= render 'layouts/footer' %>