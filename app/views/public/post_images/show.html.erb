<!--ヘッター-->
<%= render 'layouts/header' %>

<h5>投稿詳細画面</h5>
<%= image_tag @post_image.get_image %>

<%= link_to user_path(@post_image.user) do %>
<%= @post_image.user.name %>
<% end %>

<p><%= @post_image.title %></p>
<!--投稿文章-->
<p>説明：<%= @post_image.body %></p>
<%= render_with_hashtags(@post_image.body) %>

<!--いいね-->
<% if @post_image.favorited_by?(current_user) %>
    <p>
      <%= link_to post_image_favorites_path(@post_image), method: :delete do %>
        ♥<%= @post_image.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to post_image_favorites_path(@post_image), method: :post do %>
        ♡<%= @post_image.favorites.count %> いいね
      <% end %>
    </p>
<% end %>

<% if @post_image.user == current_user %>
  <%= link_to edit_post_image_path(@post_image) do %>
  編集
  <% end %>
  <%= link_to post_image_path(@post_image), method: :delete, data: { confirm: '本当に消しますか？' } do%>
  削除
  <% end %>
<% end %>

<div>
  <p>コメント件数：<%= @post_image.comments.count %></p>
  <% @post_image.comments.each do |comment| %>
    <p><%= image_tag comment.user.get_profile_image(100,100) %></p>
    <%= comment.user.name %>
    <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
    <% if comment.user == current_user %>
      <%= link_to "削除", post_image_comment_path(comment.post_image, comment), method: :delete %>
    <% end %>
  <% end %>
</div>
<div>
  <%= form_with model: [@post_image, @comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>



<!--フッター-->
<%= render 'layouts/footer' %>