<!--ヘッター-->
<%= render 'layouts/header' %>
<div class="container mt-5">
<div class="row mx-5 mt-5">
<!--カテゴリ-->
<%= render "layouts/side", post_categories: @post_categories, question_categories: @question_categories %>
<div class="col-8 offset-1">
<!--リンク-->
<div  class="mb-2">
<li class="d-inline">質問を投稿</li>
<li class="d-inline"><%= render "public/shared/moves" %></li>
</div>
<!--フォーム-->
<%= form_with model: @question do |f| %>
<div class="form-group col-5">
<%= f.file_field :question_image, accept: "image/*", class: "w-100 mb-2" %>
<%= f.text_field :question_title, class:"form-control mb-2", placeholder:"タイトル" %>
<%= f.collection_select :question_category_id, QuestionCategory.all, :id, :question_category, { prompt: 'カテゴリー選択' }, class:"form-control mb-2" %>
<%= f.text_area :question_body, class:"form-control mb-2", rows:"3", placeholder:"質問をここに" %>
<%= f.submit '投稿', class:"btn btn-lg btn-block btn-outline-info mt-4 mt-4 my-sm-0" %>
</div>
<% end %>
</div>
 </div>
  </div>
<!--フッター-->
<%= render 'layouts/footer' %>