  <div class="container-fluid">
    <div class="row mx-5 mt-5">
        <div class="col-md-12">
          <div class='row mx-3 justify-content-start'>

          <div class="btn-group dropdown">
           <button class="btn dropdown-toggle btn-warning" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"  aria-expanded="false">
             みんなの質問
          </button>
           <div class="dropdown-menu dropdown-menu-left" x-placement="right-start" style="position: absolute; transform: translate3d(60px, 0px, 0px); top: 0px; left: 0px; will-change: transform;">

            <%= link_to post_images_path, class: 'nav-link text-dark' do %>
              <p class="font-weight-bold dropdown-item">みんなの投稿</p>
            <% end %>
           </div>
           </div>

          <div class='list-unstyled d-flex flex-row'>
              <li class="pb-2 px-4">
               <%= link_to questions_path, class: 'text-dark' do %>
                 すべて
                <% end %>
                </li>|
              <% @question_categories.each do |category| %>
               <li class="pb-2 px-4">
                 <%= link_to category.question_category,questions_path(question_category: category.id), class: 'text-dark' %>
              </li>
              <% end %>
          </div>
         </div>

         <!--ここから一覧-->
         <div class="image-warp d-flex flex-reverse">
          <% @questions.each do |image| %>
            <div class="my-4">
              <div class="card border-warning shadow p-3 mx-3" style="width:23rem">
               <div class= "mx-auto">
                <div class="mt-1 pt-3 pl-3 mb-2">
                  <!--アイコン-->
                  <%= link_to user_path(image.user),class:"text-dark" do %>
                    <%= image_tag image.user.get_profile_image(130,130),class: "icon rounded-circle" %>
                    <%= image.user.name %>
                  <% end %>
                </div>
                 <div class= "index-image col-md-11">
                    <!--写真-->
                    <%= image_tag image.get_question_image(700,520)%>
                  </div>
                    <p class="font-weight-bold card-title pl-3 pt-2 col-md-11">
                    <!--タイトル-->
                      <%= link_to question_path(image.id), class:"text-dark" do %>
                        <%= image.question_title %>
                      <% end %>
                    </p>
                    <p class="card-title pl-3 pt-2 col-md-11">
                    <!--内容,ハッシュタグリンク-->
                      <%= render_with_hashtags(image.question_body) %><br>
                      <%= image.created_at.strftime('%Y/%m/%d') %>
                    </p>
                  <h2 class="text-right favorite-btn_<%= image.id %>">
                    <%= render "public/question_favorites/favorite-btn", question: image %>
                 </h2>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
       </div>
    </div>
  </div>
<!--フッター-->
<%= render 'layouts/footer' %>