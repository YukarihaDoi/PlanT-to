<div class="container mt-5">
  <h2>
    新規登録
  </h2>
  <p class="my-3">
    <%= render "public/shared/links" %><br />
  </p>
   <div class="row lg-5 mt-5">
     <div class="col-md-8 col-lg-8">
       <%= form_with model: @user, url: user_registration_path do |f| %>
         <div class="form-group">
           <%= f.label :name %><br>
           <%= f.text_field :name, class:"form-control mb-2" %>
           <%= f.label :email %><br />
           <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mb-2" %>
           <%= f.label :password %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
           <%= f.password_field :password, autocomplete: "new-password" , class:"form-control mb-2"%>
           <%= f.label :password_confirmation %><br />
           <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control mb-2" %>
           <%= f.submit "Sign up", class:"btn btn-lg btn-block btn-outline-info mt-4 my-sm-0" %>
         </div>
       <% end %>
      </div>
     <div class="col-lg-8 px-5">
      <%= render "public/shared/error_messages", resource: resource %>
     </div>
   </div>
</div>