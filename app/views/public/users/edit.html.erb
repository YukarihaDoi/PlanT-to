<!--ヘッター-->
<%= render 'layouts/header' %>
<div class="container mt-5">
  <div class="row mx-5 mt-5">
    <!--カテゴリ-->
    <%= render "layouts/side", post_categories: @post_categories, question_categories: @question_categories %>
    <div class="col-8 offset-1">
      <div  class="row mb-2">
       <%= link_to user_path(@user),class:"text-success" do %>
        <p>マイページに戻る</p>
       <% end %>
      </div>
      <!--フォーム-->
      <%= form_with model: @user ,method: :patch do |f| %>
        <div class="form-group row">
          <%= f.label "プロフィール画像" %>
          <%= f.file_field :profile_image, accept: "image/*", class: "w-100 mb-2" %>
          <%= f.label "名前" %><br>
          <%= f.text_field :name, class:"form-control mb-2", placeholder:"名前" %>
          <%= f.label "自己紹介" %><br>
          <%= f.text_area :introduction, class:"form-control mb-2", rows:"3", placeholder:"好きな植物などみんなに紹介しましょう" %>
          <%= f.submit '編集', class:"btn btn-lg btn-block btn-outline-info mt-4 my-sm-0"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!--フッター-->
<%= render 'layouts/footer' %>