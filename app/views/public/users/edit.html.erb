<!--ヘッダー-->
<%= render 'layouts/header' %>
<!--ユーザー編集-->
<div class="container mt-5">
  <div class="row mx-auto mt-5 justify-content-center">
     <div class="col-md-8 card shadow p-3">
      <div  class="row mb-2 pl-5 card-body">
       <%= link_to user_path(current_user),class:"text-info" do %>
          <h2>
           <i class="fa-solid fa-circle-left"></i>
          </h2>
       <% end %>
      </div>
      <!--エラーメッセージ-->
      <%= render 'layouts/error',object: @user %>
      <!--フォーム-->
      <%= form_with model: @user ,method: :patch do |f| %>
        <div class="form-group col-md-11 px-5 pb-5 mx-auto">
          <%= f.label "プロフィール画像" %>
          <%= f.file_field :profile_image, accept: "image/*", class: "w-100 mb-2" %>
          <%= f.label "名前" %>
          <%= f.text_field :name, class:"form-control mb-2", placeholder:"名前" %>
          <%= f.label "自己紹介" %>
          <%= f.text_area :introduction, class:"form-control mb-2", rows:"3", placeholder:"好きな植物などみんなに紹介しましょう" %>
          <%= f.submit '編集', class:"btn btn-lg btn-block btn-outline-info mt-4 my-sm-0"  %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!--フッター-->
<%= render 'layouts/footer' %>