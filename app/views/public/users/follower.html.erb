<!--フォロワー確認-->
<div class='container mt-5'>
  <div class='row mx-auto mt-5 '>
    <div class="col-md-12  card">
       <div class="mt-2 card-body">

         <%= image_tag @user.get_profile_image(200,200),class: "rounded-circle user" %>
         <p class="mx-2">Follower</p>

            <table class='table'>
              <thead>
                <tr>
                  <th>image</th>
                  <th>name</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                 <% @user.followed_user.where.not(id: current_user.id).each do |user| %>
                  <tr>
                    <td><%= image_tag user.get_profile_image(200,200),class: "rounded-circle user" %></td>
                    <td><%= user.name %></td>
                    <td><%= link_to 'Show', user, class: "user_#{user.id}" %></td>
                  </tr>
                 <% end %>
              </tbody>
            </table>

    　</div>
    </div>
  </div>
</div>