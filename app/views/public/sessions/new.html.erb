<div class="container mt-5">
 <h2>
   ログイン
 </h2>
 <p class="my-3">
   <%= render "public/shared/links" %><br />
 </p>
  <div class="row mx-5 mt-5">
   <div class="col-md-8 col-lg-8">
     <%= form_with model: @user, url: user_session_path do |f| %>
        <div class="form-group">
           <%= f.label :email %><br />
           <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-control mb-2" %>
           <%= f.label :password %><br />
           <%= f.password_field :password, autocomplete: "current-password", class:"form-control mb-2" %>
             <% if devise_mapping.rememberable? %>
                 <%= f.check_box :remember_me %>
                 <%= f.label :remember_me %>
             <% end %>
           <%= f.submit "Log in", class:"btn btn-lg btn-block btn-outline-info mt-4 my-sm-0" %>
        </div>
      <% end %>
    </div>
    <div class="col-md-8 px-5">
      <%= render "public/shared/error_messages", resource: resource %>
    </div>
  </div>
</div>